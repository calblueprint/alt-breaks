<div class="row-fluid">
<div class="span8 offset1"><h1><%= @instance.name %></h1></div>




<div class="row-fluid">
	<div class="row-fluid">
		<div class="span10 offset1">
			<div class="span1 offset1"></div>
			<table class="table table-hover table-bordered">
				<% if @posts %>
	 				<% @posts.each do |post| %>
	  					</tbody>
	    					<td><h4><%= link_to post.title, trip_instance_post_path(:trip_instance_id => @instance.id, :id => post.id) %></h4> <br> Created by: <%= post.user.name %></td>
  						</tbody>
	  				<% end %>
				<% end %>
			</table>
			</div>
		</div>
	</div>
</div>