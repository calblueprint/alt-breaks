<p id="notice"><%= notice %></p>

<div><%= image_tag @trip.cover_photo.url(:large) %></div>

<h1><%= @trip.name %></h1>
<h4><%= @trip.subtitle %></h4>

<br>
<p>
  <b>Location:</b>
  <%= @trip.location %>
</p>

<p>
  <b>Description:</b>
  <%= @trip.description %>
</p>

<h3>Testimonies</h3>
<div>
	<% @testimonies.each do |t| %>
		<div><%= t.description %></div>
	<% end %>
</div>

<h3>Photos</h3>
<div>
	<% @photos.each do |p| %>
		<div><%= image_tag p.photo.url(:medium) %></div>
	<% end %>
</div>

<%= link_to 'Edit', edit_trip_path(@trip) %>
