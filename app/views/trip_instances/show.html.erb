<!DOCTYPE html>
<html>
<head>
  <script type="text/javascript" src="https://raw.github.com/twitter/bootstrap/master/js/bootstrap-transition.js"></script>
  <script type="text/javascript" src="https://raw.github.com/twitter/bootstrap/master/js/bootstrap-collapse.js"></script>
  <script type="text/javascript" src="https://raw.github.com/twitter/bootstrap/master/js/bootstrap-modal.js"></script>
  <script type="text/javascript" src="https://raw.github.com/twitter/bootstrap/master/js/bootstrap-typeahead.js"></script>
  <%= javascript_include_tag 'chosen' %>
</head>
<body>

<!--Show Trip Instance-->

<div class="row-fluid">
	<div class="span8 offset1"><h1><%= @trip.name %> <%= @instance.year %></h1></div>
	<div class="row-fluid">
		<div class="span7 offset1">
			<h3>Admin Welcome Message</h3>
			<div class="row-fluid">
				<div class="well">
					Sample message. I am so excited for this trip! 
				</div>
			</div>
			<div class="row-fluid">
				<h3>Recent Posts</h3>
				<div class="row-fluid">
					<table class="table table-hover table-bordered">
						<% if @posts %>
  							<% @posts.each do |post| %>
  								</tbody>
    								<td><h4><%= link_to post.title, trip_instance_post_path(:trip_instance_id => @instance.id, :id =>post.id) %></h4> <br> Created by: <%= post.user.name %></td>
	  							</tbody>
  							<% end %>
						<% end %>
					</table>
					<%= link_to "See all", trip_instance_posts_path(@instance_id)%>
				</div>
				
		 	</div>
		</div>
		<!--Sidebar: SHOULD BE CHANGED TO PARTIAL-->
		<div class="span3 offset1">


			<!--<%= link_to "Create Post", new_trip_instance_post_path(@instance_id), :class=>"btn" %>-->
			

	    <a href="#addPost" role="button" class="btn" data-toggle="modal">Create Post</a>
      <div id="addPost" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
          <h3 id="myModalLabel">Create Post</h3>
        </div>
        <%= render :partial=>'/posts/instance_form', :locals => {:instance_id => @instance_id} %>
      </div>

      <%= link_to "Create Testimony", new_trip_testimony_path(@instance_id), :class=>"btn" %>


			<h3>Members</h3>
			<% @users.each_slice(2) do |user1, user2| %>
				<ul class="thumbnails">
					<div class="row-fluid">
  						<li class="span4">
    						<a href="#" class="thumbnail">
      						<img src="/assets/cat.png" alt="">
    						</a>
    						<p><%= user1.name %></p>
  						</li>
  						<% if !user2.nil? %>
  							<li class="span4">
    							<a href="#" class="thumbnail">
      							<img src="/assets/cat.png" alt="">
    							</a>
    							<p><%= user2.name %></p>
  							</li>
  					 	<% end %>
  					</div>
  				</ul>
  			<% end %>
		</div>
	</div>
</div>

</body>




