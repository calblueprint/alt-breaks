<div class="row-fluid">
	
<p id="notice"><%= notice %></p>

<h2><%= @post.title %></h2>

<p>
  <b>Posted by </b>
  <%= User.find(@post.user_id).name %>
</p>

<p>
  <b>Description:</b>
  <%= @post.description %>
</p>

<!--
<p>
  <b>Video link:</b>
  <%= @post.video_link %>
</p>
-->

<br>
<h3>Responses</h3>

<%= render 'responseform' %>
<div id="comment-table"><%= render :partial => 'posts/response_table', :locals => {:post => @post} %></div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

</div>
