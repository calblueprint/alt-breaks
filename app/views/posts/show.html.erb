<p id="notice"><%= notice %></p>

<h1><%= @post.title %></h1>

<p>
  <b>By:</b>
  <%= @post.user_id %>
</p>

<p>
  <b>Description:</b>
  <%= @post.description %>
</p>

<p>
  <b>Video link:</b>
  <%= @post.video_link %>
</p>

<%= render 'responseform' %>

<br>
<h2>Responses:</h2>
<div id="comment-table"><%= render :partial => 'posts/response_table', :locals => {:post => @post} %></div>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
