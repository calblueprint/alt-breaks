<div class="row-fluid">
  <div class="span8 offset1">
    <h2><%= @post.title %></h2>
  </div>
  <div class="row-fluid">
    <div class="span7 offset1">
      <p><i>submitted <%= time_ago_in_words(@post.created_at) %> ago by </i><%= @post.user.name %></p>
      <div class="row-fluid">
        <div class="well">
          <%= @post.description %>
        </div>
      </div>
      <h3>Responses</h3>
      <%= render 'responseform' %>
      <div id="comment-table">
        <%= render :partial => 'posts/response_table', :locals => {:post => @post} %>
      </div>
      <% if trip = @post.trip %>
        <%= link_to 'Back', internal_trip_path(trip) %>
      <% elsif trip_instance = @post.trip_instance %>
        <%= link_to 'Back', trip_instance_path(trip_instance) %>
      <% end %>
    </div>
    <!--Sidebar: SHOULD BE CHANGED TO PARTIAL-->
    <div class="span3 offset1">
      <%= link_to "Create Post", new_trip_instance_post_path(@instance.id), :class=>"btn" %>
        <%= link_to "Create Testimony", new_trip_testimony_path(@instance.id), :class=>"btn" %>
        <h3>Members</h3>
        <% @users.each_slice(2) do |user1, user2| %>
          <ul class="thumbnails">
            <div class="row-fluid">
                <li class="span4">
                  <a href="#" class="thumbnail">
                    <img src="/assets/cat.png" alt="">
                  </a>
                  <p><%= user1.name %></p>
                </li>
                <% if !user2.nil? %>
                  <li class="span4">
                    <a href="#" class="thumbnail">
                      <img src="/assets/cat.png" alt="">
                    </a>
                    <p><%= user2.name %></p>
                  </li>
                <% end %>
              </div>
            </ul>
          <% end %>
    </div>
  </div>
</div>
