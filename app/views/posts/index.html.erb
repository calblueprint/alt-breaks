<h1>Listing posts</h1>

<table>
  <tr>
    <th>User</th>
    <th>Trip instance</th>
    <th>Description</th>
    <th>Video link</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.user_id %></td>
    <td><%= post.trip_instance_id %></td>
    <td><%= post.description %></td>
    <td><%= post.video_link %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit', edit_post_path(post) %></td>
    <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

