<h1>Posts Index</h1>

<%= link_to "Create Post", new_post_path, :class=>"btn" %>
<p></p>
<table class="table table-hover table-condensed">
  <thead>
    <th>Title</th>
    <th>Created By</th>
    <th></th>
    <th></th>
    <th></th>
  </thead>
<% @posts.each do |post| %>
  </tbody>
    <td><%= post.title %></td>
    <td><%= post.user %></td>
    <td><%= button_to 'Show', post, :class=>"btn btn-mini btn btn-primary" %></td>
    <td><%= button_to 'Edit', edit_post_path(post), :class=>"btn btn-mini btn-success" %></td>
    <td><%= button_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"btn btn-mini btn-danger"%></td>
  </tbody>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
