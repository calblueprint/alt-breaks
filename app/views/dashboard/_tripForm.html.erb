<%= form_for(trip) do |f| %>
  <div class="modal-body">
    New Trip Name: <%= f.text_field :name %> <br />
    New Trip Subtitle: <%= f.text_field :subtitle %> <br />
    Location: <%= f.text_field :location %> <br />
    <%= f.hidden_field :latitude %><%= f.hidden_field :longitude %> <br />

    <%= gmaps("map_options" => {
      :detect_location => true,
      :center_on_user => false,
      "zoom" => 6,
      :type => :TERRAIN
    },
    "markers" => {
      "data" => {"lat" => 42, "lon" => 42},
      "options" => {
        "draggable" => true
      }
    }) %>

    Description <%= f.text_field :description %> <br />
    Upload Photo: <%= f.file_field :cover_photo %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <%= f.button :submit, :class => 'btn btn-primary' %>
  </div>
<% end %>