<h1>Break Leader Dashboard</h1>

<div class="row-fluid">
<div class="offset1">
<h2><%= @trip_name %> <%= @trip_year %></h2>
<h3>My Group Members<h3>
</div>
</div>
<div class="row-fluid">
<div class="span10 offset1">
<table class="table table-hover">
  <% @list_of_members.each do |member| %>
  </tbody>
    <td><%= member.name %></td>
    <% @trip_instance_of_break_leader =%>
    <td><%=link_to "X", delete_from_trip_path(@trip_instance_of_break_leader.id, member.id), :class=>"btn btn-mini btn-danger"%></td>
  </tbody>
  <% end %>
 </table>
</div>
</div>
<div class="row-fluid">
<div class="span10 offset1">
<h3> Pending Requests</h3>
<table class="table table-hover">
  <% @requests_for_break_leader.each do |request| %>
  </tbody>
    <td><%= request.user.name %></td>
    <td><%= link_to "Approve", approve_request_path(request.id), :class=> "btn" %></td>
  </tbody>
  <% end %>
 </table>
</div>
</div>
