</head>
<body>
  <div class="navbar navbar-static-top">
    <nav class="navbar-inner">
      <div class="container">
        <%= render "layouts/navigation" %>
      </div>
    </nav>
  </div>
  <!-- <div class="container-fluid"> -->
  <%= yield %>
  <!-- </div> -->

  <div class="footer-wrapper">
    <%= render "layouts/footer" %>
  </div>
  <%= yield :scripts %>
