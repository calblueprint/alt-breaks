  <script>
    $(document).ready(function() {
      $('#carousel-title').carousel({interval: 8000});
      $('#photos-carousel').carousel({interval: 8000});
      $('#testimonies-carousel').carousel({pause: true, interval: false});
      $('#testimonies-controls-carousel').carousel({pause: true, interval: false});
    });
  </script>

  <%= javascript_include_tag :testimonies %>

  <%= yield(:head) %>

