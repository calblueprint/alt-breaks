<%= link_to "Alternative Breaks", root_path, :class => 'brand' %>
<ul class="nav">
    <!--Internal NavBar-->
  <% if user_signed_in? %>
    <li>
      <%= link_to('General', page_path(1)) %>
    </li>

		<% if is_internal? %>
			<li>
	      <%= link_to('Internal', page_path(2)) %>
	    </li>
		<% end %>

    <!--Trip Group Discussion-->
    <li class="dropdown">
      <% if permissions = current_user.trip_permissions %>
        <a href="#" class="dropdown-toggle" data-toggle="dropdown">My Trips <b class="caret"></b></a>
        <ul class="dropdown-menu">
          <% permissions.each do |p| %>
            <% instance = p.trip_instance %>
            <% name = instance.trip.name %>
            <li>
              <%= link_to(name + " " + instance.year.to_s, trip_instance_path(instance[:id])) %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </li>
  <% end %>

  <li class="dropdown">
      <a class="dropdown-toggle" data-toggle="dropdown">Trips <b class="caret"></b></a>
      <ul class="dropdown-menu" role="menu">
        <% Trip.all.each do |trip| %>
          <li>
            <%= link_to(trip[:name], trip_path(trip[:id])) %>
          </li>
        <% end %>
      </ul>
    </li>
</ul>

<ul class="nav pull-right">
  <% if user_signed_in? %>
    <li class="active">
    <%= link_to(current_user.name, user_path(current_user.id)) %>
    </li>
    <li>
    <%= link_to('Dashboard', dashboard_path) %>
    </li>
    <li>
    <%= link_to('Logout', destroy_user_session_path, :method=>'delete') %>
    </li>
  <% else %>
    <li>
    <%= link_to('Login', new_user_session_path)  %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li>
    <%= link_to('Account Settings', edit_user_registration_path) %>
    </li>
  <% else %>
    <li>
    <%= link_to('Sign up', new_user_registration_path)  %>
    </li>
  <% end %>
</ul>
